@{
    ViewBag.Title = "Balance";
}
@using CacheMachine.Common
@model CacheMachine.DAL.Models.Operation

<content id="operationContent">
    <form class="form-cache-machine">
        <div class="page-header">
            <h2>@Resources.CardInformation</h2>
        </div>
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <td>@Resources.CardNumber</td>
                    <td>@Model.CardId</td>
                </tr>
                <tr>
                    <td>@Resources.Date</td>
                    <td>@Model.OperationDate.ToString("d")</td>
                </tr>
                <tr>
                    <td>@Resources.SumAvailable</td>
                    <td>@Model.Card.Sum</td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-lg-6">
                @Html.Partial("BackButton")
            </div>
            <div class="col-lg-6">
                @Html.Partial("ExitButton")
            </div>
        </div>
    </form>
</content>
