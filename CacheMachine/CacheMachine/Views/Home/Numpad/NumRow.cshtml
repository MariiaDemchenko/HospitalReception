@using CacheMachine.Common
@model int?
<div class="row num-row">
    @{
        if (Model == 0)
        {
            @Html.Partial("Numpad/NumButton", 0)
            <div class=" col-sm-8">
                <button class="btn-lg btn-num btn-default" id="btnClear">@Resources.Сlear</button>
            </div>
        }
        else
        {
            for (var i = Model; i < Model + 3; i++)
            {
                @Html.Partial("Numpad/NumButton", i)
            }
        }
    }
</div>
