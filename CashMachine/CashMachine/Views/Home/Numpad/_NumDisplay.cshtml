@using CashMachine.Common
@model CashMachine.ViewModels.NumDisplayViewModel
@{
    if (Model.Mask == Constants.PinCodeMask)
    {
        @Html.Partial("Numpad/_PasswordNumDisplay", Model);
    }
    else if (Model.Mask == Constants.CardNumMask)
    {
        @Html.Partial("Numpad/_TextNumDisplay", Model);
    }
    else
    {
        @Html.Partial("Numpad/_SumDisplay", Model);
    }
}