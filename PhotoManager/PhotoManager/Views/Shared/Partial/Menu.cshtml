@model string
@{
    if (User.Identity.IsAuthenticated)
    {
        <div id="menu" class="menu" data-item="@Model">
            <button class="btn btn-menu btn btn-outline-secondary btn-add">ADD</button>
            <button class="btn btn-menu btn-outline-danger btn-remove-confirm" data-toggle="modal" data-target="#photosDeleteModal">REMOVE</button>
            <button class="btn btn-menu btn-outline-secondary btn-manage-albums">MANAGE ALBUMS</button>
        </div>

        <div class="modal fade" id="photosDeleteModal" tabindex="-1" role="dialog" aria-labelledby="photosDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="photosDeleteModalLabel">Remove photos</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">Are you sure to remove selected photos?</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-remove">Remove selected</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="photosDeleteSingleModal" tabindex="-1" role="dialog" aria-labelledby="photosDeleteSingleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="photosDeleteSingleModalLabel">Remove photos</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">Are you sure to remove selected photos?</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-remove-single">Remove selected</button>
                    </div>
                </div>
            </div>
        </div>
    }
}