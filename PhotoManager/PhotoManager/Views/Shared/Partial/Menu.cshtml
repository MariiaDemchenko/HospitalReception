@model string
@{
    if (User.Identity.IsAuthenticated)
    {
        <div id="menu" class="form-menu" data-item="@Model">
            <button class="btn btn-success btn-menu btn-add">ADD</button>
            <button class="btn btn-warning btn-menu btn-edit">EDIT</button>
            <button class="btn btn-danger btn-menu btn-remove-confirm" data-toggle="modal" data-target="#exampleModal">REMOVE</button>
            <button class="btn btn-menu btn-manage-albums">MANAGE ALBUMS</button>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Remove photos</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">Are you sure to remove selected photos?</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-remove">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    }
}