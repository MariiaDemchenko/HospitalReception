@{
    ViewBag.Title = "Album";
}
<div class="page-header">
    <h2>Manage albums</h2>
</div>
@Html.AntiForgeryToken()
<div id="albumHeader"></div>
@Html.Partial("Partial/Search")
<div id="menu" class="menu" data-item="album">
    <button class="btn btn-menu btn btn-outline-secondary btn-add">ADD</button>
    <button class="btn btn-menu btn-outline-danger btn-outline-secondary" data-toggle="modal" data-target="#albumsDeleteModal">REMOVE</button>
</div>

<div id="counter"></div>
<div id="content" class="row"></div>
<div id="spinner" class="loader"></div>

<div class="modal fade" id="albumsDeleteModal" tabindex="-1" role="dialog" aria-labelledby="albumsDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="albumsDeleteModalLabel">Remove albums</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">Are you sure to remove selected albums?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-remove">Remove selected</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="albumsDeleteSingleModal" tabindex="-1" role="dialog" aria-labelledby="albumsDeleteSingleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="albumsDeleteSingleModalLabel">Remove album</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">Are you sure to remove selected album?</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-remove-single">Remove album</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/Album/Manage")
}
