@using PhotoManager.CustomHelpers
@model PhotoManager.DAL.ProjectionModels.AlbumIndexModel

<form id="formAlbumAdd">
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div id="albumAddForm" class="row form-menu">
        <table>
            <tr>
                <td>@Html.HiddenFor(m => m.Id)</td>
                <td>@Html.HiddenFor(m => m.OwnerId)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(m => m.Name)</td>
                <td>@Html.TextEditorFor(m=>m.Name)</td>
            <tr>
                <td>@Html.DisplayNameFor(m => m.Description)</td>
                <td>@Html.TextEditorFor(m => m.Description)</td>
            </tr>
            <tr>
                <td>
                    <button class="btn btn-block btn-menu">SAVE CHANGES</button>
                </td>
            </tr>
        </table>
    </div>
    <div id="content" class="row"></div>
    <div id="spinner" class="loader"></div>
</form>
<div class="modal fade" id="addAlbumUniqueModal" tabindex="-1" role="dialog" aria-labelledby="addAlbumUniqueLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAlbumUniqueLabel">Error adding album</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">Album name must be unique</div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Album/Add")
}
